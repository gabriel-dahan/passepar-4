{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0", // Ignores deprecated options warnings in new version 5.0
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "ESNext",
      "DOM"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}
